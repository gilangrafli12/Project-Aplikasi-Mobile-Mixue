<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_header_background"
    tools:context=".FaqActivity">

    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp" />

    <!-- Form and Save Button Container -->
    <LinearLayout
        android:id="@+id/form_and_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/back_button"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corner_background"
        android:layout_marginTop="150dp">

        <!-- Header -->
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequently Asked Question (FAQs)"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="16dp" />

        <!-- FAQ List -->
        <LinearLayout
            android:id="@+id/faq_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/question_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pertanyaan 1"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pertanyaan 2"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/question_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pertanyaan 3"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Pertanyaan Lain -->
        <TextView
            android:id="@+id/additional_question_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pertanyaan Lain?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/additional_question_input"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Tanyakan pertanyaanmu disini..."
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="top" />

        <!-- Tanya Button -->
        <Button
            android:id="@+id/tanya_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1A237E"
            android:layout_marginTop="140dp"
            android:text="Tanya"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_bold" />
    </LinearLayout>

</RelativeLayout>
